<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mafia11"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pageName"
        android:text="Login Page"
        android:textSize="30sp"
        android:editable="false"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/emailAddress"
        android:layout_alignEnd="@+id/emailAddress"
        android:layout_marginRight="26dp"
        android:layout_marginEnd="26dp"
        android:background="#ffffff"
        android:textColor="#ff0000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email Address"
        android:id="@+id/textViewEmail"
        android:layout_marginTop="62dp"
        android:textColor="#ff0202"
        android:layout_below="@+id/pageName"
        android:layout_alignLeft="@+id/textViewPassword"
        android:layout_alignStart="@+id/textViewPassword" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailAddress"
        android:imeOptions="actionNext"
        android:background="#ffffff"
        android:layout_below="@+id/textViewEmail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/textViewPassword"
        android:layout_below="@+id/emailAddress"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ff0202" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password"
        android:imeOptions="actionDone"
        android:layout_below="@+id/textViewPassword"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login"
        android:text="LOGIN"
        android:onClick="onLogin"
        android:textColor="#ff0000"
        android:layout_below="@+id/password"
        android:layout_alignRight="@+id/pageName"
        android:layout_alignEnd="@+id/pageName"
        android:layout_marginTop="47dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:text="SIGNUP"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/login"
        android:layout_alignLeft="@+id/login"
        android:layout_alignStart="@+id/login"
        android:textColor="#0008ff" />


</RelativeLayout>




